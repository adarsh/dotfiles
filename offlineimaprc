nametrans = lambda folder: {
                            'important': '[Gmail]/Important',
                            'archive': '[Gmail]/All Mail',
                            'drafts':  '[Gmail]/Drafts',
                            'starred': '[Gmail]/Starred',
                            'sent':    '[Gmail]/Sent Mail',
                            'trash':   '[Gmail]/Trash',
                            }.get(folder, folder)

[Repository thoughtbot-remote]
maxconnections = 1
type = Gmail
remoteuser = adarsh@thoughtbot.com
remotepasseval = get_keychain_pass(account="adarsh@thoughtbot.com",
                                   server ="imap.gmail.com")
