                            '[Gmail]/Important': 'important',
                            '[Gmail]/All Mail':  'archive',
                            '[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'starred',
                            '[Gmail]/Trash':     'trash',
                            }.get(folder, folder)
